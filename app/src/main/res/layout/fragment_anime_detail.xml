<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/circle_white_for_logo"
        android:backgroundTint="@color/muted_purple"
        android:drawableTop="@drawable/baseline_arrow_back_ios_24"
        android:drawableTint="@color/white"
        android:paddingStart="9dp"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_btn"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/anime_title_detail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/anime_title"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textColor="@color/dark_purple"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/anime_image_detail"
                android:textSize="28sp"/>

            <ImageView
                android:id="@+id/anime_image_detail"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/anime_title_detail"
                app:layout_constraintBottom_toTopOf="@id/anime_genre_tab"
                android:layout_marginTop="24dp"
                tools:src="@drawable/banner1"/>

            <RelativeLayout
                android:id="@+id/anime_genre_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/anime_image_detail"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_rounded_rec"
                android:backgroundTint="@color/soft_muted_purple"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/anime_genre_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="32dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    tools:text="Genre: Action, Adventure"
                    android:textAlignment="center"/>

            </RelativeLayout>

            <TextView
                android:layout_width="120dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/anime_genre_tab"
                app:layout_constraintStart_toStartOf="@id/anime_synopsis_detail"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_rounded_rec"
                android:backgroundTint="@color/muted_purple"
                android:text="Synopsis"
                android:fontFamily="sans-serif-black"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/anime_synopsis_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/anime_genre_tab"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="64dp"
                android:padding="24dp"
                android:background="@drawable/bg_rounded_rec"
                android:backgroundTint="@color/white"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                tools:text="Ini adalah sinopsis anime yang sangat panjang dan menarik untuk dibaca oleh para pengguna aplikasi."/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/anime_synopsis_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="64dp"
                android:text="REVIEW"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                android:background="@drawable/bg_rounded_rec"
                android:backgroundTint="@color/teal_700"
                android:paddingHorizontal="24dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>